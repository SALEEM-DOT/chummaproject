<!-- views/displayImages.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uploaded Images</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-custom {
            height: 300px;
            width: 320px;
            background-color: #232323;
            margin: 20px auto;
            border-radius: 8px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5);
        }

        .card-img {
            height: 120px;
            width: 120px;
            background-color: #fff;
            border-radius: 50%;
            margin: 30px auto 20px auto;
            border: 4px solid transparent;
            box-shadow: 0 0 20px 10px rgba(3, 169, 244, 0.6); /* Glowing border */
        }

        .card-img img {
            height: 100%;
            width: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .desc {
            text-align: center;
            margin-top: 60px;
        }

        .primary-text {
            color: #ffffff;
            font-size: 20px;
            font-weight: 600;
            margin: 5px 0;
        }

        .secondary-text {
            color: #d5d5d5;
            font-weight: 400;
            font-size: 14px;
        }

        .card-custom:hover .card-img {
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Uploaded Images</h1>
        <div class="row">
            <% if (images) { %>

                <!-- Image A -->
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-img">
                            <img src="/<%= images.imageA %>" alt="Image A">
                        </div>
                        <div class="desc">
                            <h6 class="primary-text"><%= images.descriptionA1 %></h6>
                            <h6 class="primary-text"><%= images.descriptionA2 %></h6>
                            <h6 class="primary-text"><%= images.descriptionA3 %></h6>
                        </div>
                    </div>
                </div>

                <!-- Image B -->
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-img">
                            <img src="/<%= images.imageB %>" alt="Image B">
                        </div>
                        <div class="desc">
                            <h6 class="primary-text"><%= images.descriptionB1 %></h6>
                            <h6 class="primary-text"><%= images.descriptionB2 %></h6>
                            <h6 class="primary-text"><%= images.descriptionB3 %></h6> <!-- Corrected from descriptionAB3 -->
                        </div>
                    </div>
                </div>

                <!-- Image C -->
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-img">
                            <img src="/<%= images.imageC %>" alt="Image C">
                        </div>
                        <div class="desc">
                            <h6 class="primary-text"><%= images.descriptionC1 %></h6>
                            <h6 class="primary-text"><%= images.descriptionC2 %></h6>
                            <h6 class="primary-text"><%= images.descriptionC3 %></h6>
                        </div>
                    </div>
                </div>

                <!-- Image D -->
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-img">
                            <img src="/<%= images.imageD %>" alt="Image D">
                        </div>
                        <div class="desc">
                            <h6 class="primary-text"><%= images.descriptionD1 %></h6>
                            <h6 class="primary-text"><%= images.descriptionD2 %></h6>
                            <h6 class="primary-text"><%= images.descriptionD3 %></h6>
                        </div>
                    </div>
                </div>

                <!-- Image E -->
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-img">
                            <img src="/<%= images.imageE %>" alt="Image E">
                        </div>
                        <div class="desc">
                            <h6 class="primary-text"><%= images.descriptionE1 %></h6>
                            <h6 class="primary-text"><%= images.descriptionE2 %></h6>
                            <h6 class="primary-text"><%= images.descriptionE3 %></h6>
                        </div>
                    </div>
                </div>

                <!-- Image F -->
                <div class="col-md-4">
                    <div class="card-custom">
                        <div class="card-img">
                            <img src="/<%= images.imageF %>" alt="Image F">
                        </div>
                        <div class="desc">
                            <h6 class="primary-text"><%= images.descriptionF1 %></h6>
                            <h6 class="primary-text"><%= images.descriptionF2 %></h6>
                            <h6 class="primary-text"><%= images.descriptionF3 %></h6>
                        </div>
                    </div>
                </div>

            <% } else { %>
                <p>No images uploaded yet.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
